<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple4"
    tools:context=".TeacherLanding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:onClick="logout"
            android:text="Logout" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_height="78dp"
            android:textColor="@color/white"
            android:background="@color/cgrey"
            android:text="Create Questionare:"
            android:textSize="30dp" />

        <Button
            android:id="@+id/newQuestion"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="100dp"
            android:layout_height="wrap_content"
            android:onClick="newQ"
            android:focusable="true"
            android:text="New" />

        <TextView
            android:id="@+id/countdownTeacher"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <ListView
            android:id="@+id/teacherResponseList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        </ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>